{
  "schemas": {
    "version": "1.0.0",
    "form": {
      "message": {
        "example-01": {
          "angular": {
            "schema": ["*"]
          }
        }
      }
    },
    "configure": {
      "my-default-config": {
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "receiverPath": {
                "type": "string",
                "required": true,
                "default": ""
              }
            }
          }
        }
      }
    },
    "message": {
      "example-message-01": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "required": true,
            "enum": [
              "open-application",
              "disconnectapps",
              "poll",
              "logoff",
              "reconnectapps"
            ],
            "default": "open-application"
          },
          "application": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "required": false
          }
        }
      }
    }
  }
}
