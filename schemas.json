{
  "schemas": {
    "version": "1.0.0",
    "configure": {
      "my-default-config": {
        "title": "Default Configuration",
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {}
          }
        },
        "required": ["options"]
      },
      "advanced-config": {
        "title": "Advanced Configuration",
        "type": "object",
        "properties": {
          "options": {
            "title": "Options",
            "type": "object",
            "properties": {
              "receiverPath": {
                "title": "Custom Receiver Path",
                "type": "string",
                "default": ""
              }
            },
            "required": ["receiverPath"]
          }
        },
        "required": ["options"]
      }
    },
    "message": {
      "open-application": {
        "title": "Open Application (Windows only)",
        "type": "object",
        "properties": {
          "command": {
            "title": "Command",
            "type": "string",
            "default": "open-application"
          },
          "application": {
            "title": "Application",
            "type": "string"
          }
        },
        "required": ["command", "application"],
        "x-form-schema": {
          "angular": "message.application.angular"
        }
      },
      "start-receiver": {
        "title": "Start Receiver",
        "type": "object",
        "properties": {
          "command": {
            "title": "Command",
            "type": "string",
            "default": "start-receiver"
          }
        },
        "required": ["command"],
        "x-form-schema": {
          "angular": "message.simple-command.angular"
        }
      },
      "disconnectapps": {
        "title": "Disconnect Apps (windows only)",
        "type": "object",
        "properties": {
          "command": {
            "title": "Command",
            "type": "string",
            "default": "disconnectapps"
          }
        },
        "required": ["command"],
        "x-form-schema": {
          "angular": "message.simple-command.angular"
        }
      },
      "poll": {
        "title": "Poll Receiver (windows only)",
        "type": "object",
        "properties": {
          "command": {
            "title": "Command",
            "type": "string",
            "default": "poll"
          }
        },
        "required": ["command"],
        "x-form-schema": {
          "angular": "message.simple-command.angular"
        }
      },
      "logoff": {
        "title": "Logout of Receiver (windows only)",
        "type": "object",
        "properties": {
          "command": {
            "title": "Command",
            "type": "string",
            "default": "logoff"
          }
        },
        "required": ["command"],
        "x-form-schema": {
          "angular": "message.simple-command.angular"
        }
      },
      "reconnectapps": {
        "title": "Reconnect Apps in Receiver (windows only)",
        "type": "object",
        "properties": {
          "command": {
            "title": "Command",
            "type": "string",
            "default": "reconnectapps"
          }
        },
        "required": ["command"],
        "x-form-schema": {
          "angular": "message.simple-command.angular"
        }
      }
    },
    "form": {
      "message": {
        "simple-command": {
          "angular": []
        },
        "application": {
          "angular": [
            { "key": "application" }
          ]
        }
      }
    }
  }
}
